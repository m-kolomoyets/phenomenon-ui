{
    "name": "phenomenon-ui",
    "private": true,
    "version": "0.2.1",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "lint:eslint": "eslint --cache --max-warnings 0 --report-unused-disable-directives \"src/**/*.{js,jsx,ts,tsx}\"",
        "lint:stylelint": "stylelint --cache -q \"**/*.css\"",
        "lint:prettier": "prettier --check \"**/*.{js,ts,tsx,jsx,json,html,css,cjs}\"",
        "lint:prettier:fix": "prettier --write \"**/*.{js,ts,tsx,jsx,json,html,css,cjs}\"",
        "lint": "npm run lint:eslint && npm run lint:stylelint && npm run lint:prettier",
        "preview": "vite preview",
        "cy:open-unit": "cypress open --component --browser chrome",
        "cy:run-unit": "cypress run --component",
        "prepare": "husky"
    },
    "dependencies": {
        "@cypress/vite-dev-server": "^5.0.7",
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@radix-ui/react-label": "^2.0.2",
        "@radix-ui/react-popover": "^1.0.7",
        "@radix-ui/react-select": "^2.0.0",
        "@radix-ui/react-tooltip": "^1.0.7",
        "clsx": "^2.1.0",
        "immer": "^10.0.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-virtual": "^2.10.4"
    },
    "devDependencies": {
        "@commitlint/cli": "^18.6.1",
        "@commitlint/config-conventional": "^18.6.2",
        "@cypress/code-coverage": "^3.12.24",
        "@cypress/react18": "^2.0.0",
        "@types/react": "^18.2.56",
        "@types/react-dom": "^18.2.19",
        "@typescript-eslint/eslint-plugin": "^7.0.2",
        "@typescript-eslint/parser": "^7.0.2",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.17",
        "cypress": "^13.6.6",
        "cypress-vite": "^1.5.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "husky": "^9.0.11",
        "path": "^0.12.7",
        "postcss": "^8.4.35",
        "prettier": "^3.2.5",
        "rollup-plugin-visualizer": "^5.12.0",
        "stylelint": "^16.2.1",
        "stylelint-config-standard": "^36.0.0",
        "typescript": "^5.2.2",
        "vite": "^5.1.4",
        "vite-plugin-istanbul": "^5.0.0"
    }
}
